{
    "grammar": {
        "language": "mysql",
        "version": {
            "min": "5.7",
            "max": "5.7.9999"
        }
    },
    "rules": {
        "comment": {
            "starter": true,
            "repeat": "1..n",
            "rule": {
                "method": "case",
                "group": [
                    {
                        "method": "literal",
                        "match": "\\/\\*(.*?)\\*\\/"
                    },
                    {
                        "method": "literal",
                        "match": "\\-\\-\\s+(.*?)\n"
                    }
                ]
            }
        },
        "if_not_exists": {
            "starter": false,
            "ignore case": true,
            "method": "sequence",
            "tokenizer": {
                "rule": "comment"
            },
            "group": [
                "IF", "NOT", "EXISTS"
            ]
        },
        "create_table": {
            "starter": true,
            "method": "sequence",
            "tokenizer": {
                "rule": "comment"
            },
            "group": [
                {
                    "method": "ignore case",
                    "keyword": "CREATE"
                },
                {
                    "repeat": "0..1",
                    "rule": [
                        "TEMPORARY"
                    ]
                },
                {
                    "method": "ignore case",
                    "keyword": "TABLE"
                },
                {
                    "rule": "if_not_exists"
                }
            ]
        }
    }
}
